@model Rsvp.ViewModels.HouseholdViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SendRsvpReply", "Home", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)
<div>
    @(Model.HasReplied ? @Html.DisplayFor(model => model.Guests) : @Html.EditorFor(model => model.Guests))
</div>
    <div class="rsvpButtonDiv">
        <input class="rsvpButton" type="submit" value="RSVP" style="@(Model.HasReplied ? "display:none" : "display:block")"/>
    </div>   
}